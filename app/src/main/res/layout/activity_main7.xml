<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main7Activity"
    android:background="@drawable/buss1">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="442dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100px"
                android:text="Sign UP!"
                android:textColor="@android:color/background_dark"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/propic"
                        android:layout_width="121dp"
                        android:layout_height="113dp"
                        android:src="@drawable/propic" />

                    <Button
                        android:layout_width="121dp"
                        android:layout_height="113dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/common_google_signin_btn_text_light_disabled"
                        android:onClick="upload" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Click the image to upload..."
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="333dp"
                android:layout_height="38dp"
                android:background="@android:color/background_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="333dp"
                android:layout_height="38dp"
                android:background="@android:color/background_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/emailID"
                android:layout_width="333dp"
                android:layout_height="38dp"
                android:background="@android:color/background_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver ID:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/drid"
                android:layout_width="333dp"
                android:layout_height="38dp"
                android:background="@android:color/background_light" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="333dp"
                android:layout_height="38dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="333dp"
                android:layout_height="38dp"
                android:background="@android:color/background_light"
                android:inputType="textPassword" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password:"
                android:textSize="20dp"/>



            <EditText
                android:id="@+id/conpass"
                android:layout_width="333dp"
                android:layout_height="38dp"
                android:layout_marginBottom="20px"
                android:background="@android:color/background_light"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/errortxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfsdfsf"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18dp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="59dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/goback"
                    app:backgroundTint="@color/Extra4"
                    android:onClick="back"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="59dp"
                    android:clickable="true"
                    android:onClick="next"
                    app:backgroundTint="@color/colorPrimary"
                    app:srcCompat="@drawable/tick1" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/blur"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Driver Activity"
            android:textColor="@color/Extra1"
            android:textSize="30dp"
            android:textStyle="italic" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="98dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="229dp"
        android:visibility="gone"/>


</RelativeLayout>